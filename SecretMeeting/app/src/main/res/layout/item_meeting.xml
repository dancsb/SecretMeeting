<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_border"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp" >

    <TextView
        android:id="@+id/MeetingItemTopicTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Secret Meeting" />

    <TextView
        android:id="@+id/MeetingItemDateTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/MeetingItemTopicTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        tools:text="2022. 12. 02." />

    <TextView
        android:id="@+id/MeetingItemDescTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/MeetingItemTopicTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/MeetingItemDateTextView"
        tools:text="Hatalmas meeting lesz itt Ã¡m" />

</RelativeLayout>